<cu-custom bgColor="bg-gradual-green" isBack="{{true}}">
    <view slot="backText">添加账单</view>
</cu-custom>
<form bindsubmit="getForm">
    <view class="cu-list grid col-4 no-border">
        <view class="cu-item" wx:for="{{parts}}" wx:key bindtap="Selcethandle"
                data-index="{{ index }}">
            <view class="padding-xs">
                <image class="part "
                src="../../image/{{ partindex==index? item.part+'active' : item.part}}.png" style="width:78rpx; height:70rpx;"
                ></image>
            </view>

            <view class="text-lg text-grey" >{{item.name}}</view>
        </view>
    </view>
    <view class="flex cu-form-group justify-center padding " >
            <input
            name="billname"
            maxlength="10"
            placeholder="最多输入十个字.."
            style="width:600rpx;height:56rpx;border: 1rpx solid #999;border-radius: 10rpx;">
            </input>
    </view>
    <view class="cu-form-group margin-top">
        <view class="title">日期</view>
        <picker
        name="billdate"
        mode="date"
        value="{{date}}"
        start="2000-09-01"
        end="2025-09-01"
        bindchange="DateChange">
            <view class="picker">
                {{date}}
            </view>
        </picker>
    </view>
    <view class="cu-form-group">
        <view class="title">金额</view>
        <input
        value="{{ billmoney }}"
        name="billsum"
        placeholder="请输入..."
        style="text-align: center;"
        bindblur="BillMoney"
        type="number"></input>
    </view>
    <view class="cu-form-group">
        <view class="title">是否平摊</view>
        <switch checked bindtap="flatHandle"></switch>
    </view>
    <view class=" margin-top padding flex bg-white align-center" style="height:200rpx"  >
         <view class=" margin-right-xl " style="width:120rpx">成员</view>
        <scroll-view scroll-x class="justify-center" style="width:560rpx; white-space: nowrap;">
            <view class="members" wx:for="{{ nonPay }}" wx:key >
                <image src="../../image/avt.png"
                class="avatar"
                bindtap="payNeed"
                data-index="{{ index }}"
                ></image>
                <view class="memberTag cuIcon-roundcheckfill {{ item.payDuty ? 'text-green' : '' }}"></view>
                <block wx:if="{{ item.payDuty }}">
                    <input type=""
                    name="input{{index}}"
                    data-index="{{ index }}"
                    value="{{ flat?  billmoney/paynum : '' }}"
                    placeholder="{{ flat ?  0 : '请输入' }}"
                    bindblur="PersonalCost"
                    style="text-align:center;"
                    />

                </block>

            </view>

        </scroll-view>

    </view>

    <view class="cu-form-group padding flex justify-center">
        <view class="flex justify-center " >
            <button formType="submit" style="width:475rpx;background-color: #6c9;" class="cu-btn bg-olive round lg shadow">确认</button>
        </view>
    </view>
</form>